@model CompanyBookstore.Models.Book

@{
    ViewData["Title"] = "Usuwanie";
}
<body class="background">
    <br />
    <h1>Usuwanie książki</h1>

    <h3>Czy na pewno chcesz usunąć tę książkę?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookTitle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookAuthor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookAuthor)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookPrice)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BookDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BookDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Bestseller)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Bestseller)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Publisher)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Publisher)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Pages)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pages)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ReleaseDate)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="BookID" />
            <input type="submit" value="Usuń" class="btn btn-danger" /> |
            <a class="green" asp-action="Index">Wróć do listy</a>
        </form>
    </div>
</body>