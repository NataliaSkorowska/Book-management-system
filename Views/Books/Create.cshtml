@model CompanyBookstore.Models.Book
@{
    ViewData["Title"] = "Dodawanie nowej książki";
}
<body class="background">
    <br />
    <h1>Dodawanie książki</h1>
    <div class="text-danger">
        <b>@Html.ValidationSummary(false)</b>
    </div>
    <h4>Książka</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Category" class="control-label"></label>
                    <select asp-for="Category" class="form-control" style="background-color: #dbc09a">
                        <option selected value="Naukowa">Naukowa</option>
                        <option value="Biografia">Biografia</option>
                        <option value="Kryminał">Kryminał</option>
                        <option value="Poradnik">Poradnik</option>
                        <option value="Przygodowa">Przygodowa</option>
                        <option value="Historyczna">Historyczna</option>
                        <option value="Romans">Romans</option>
                        <option value="Słownik">Słownik</option>
                        <option value="Fantasy">Fantasy</option>
                        <option value="Lektura">Lektura</option>
                        <option value="Thriller">Thriller</option>
                        <option value="Sci-fi">Sci-fi</option>
                        <option value="Literatura piękna">Literatura piękna</option>
                        <option value="Inna">Inna</option>
                    </select>
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BookTitle" class="control-label"></label>
                    <input asp-for="BookTitle" class="form-control" style="background-color: #dbc09a" />
                    <span asp-validation-for="BookTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BookAuthor" class="control-label"></label>
                    <input asp-for="BookAuthor" class="form-control" style="background-color: #dbc09a" />
                    <span asp-validation-for="BookAuthor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BookPrice" class="control-label"></label>
                    <input asp-for="BookPrice" class="form-control" style="background-color: #dbc09a" />
                    <span asp-validation-for="BookPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BookDescription" class="control-label"></label>
                    <input asp-for="BookDescription" class="form-control" style="background-color: #dbc09a" />
                    <span asp-validation-for="BookDescription" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Bestseller" /> @Html.DisplayNameFor(model => model.Bestseller)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Publisher" class="control-label"></label>
                    <input asp-for="Publisher" class="form-control" style="background-color: #dbc09a" />
                    <span asp-validation-for="Publisher" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pages" class="control-label"></label>
                    <input asp-for="Pages" class="form-control" style="background-color: #dbc09a" />
                    <span asp-validation-for="Pages" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReleaseDate" class="control-label"></label>
                    <input asp-for="ReleaseDate" class="form-control" style="background-color: #dbc09a" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary background" style="background-color: #3c523e" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="green" asp-action="Index">Wróć do listy</a>
    </div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
